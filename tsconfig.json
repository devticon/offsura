{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths", "useRootDirs": true }
    ]
  },

  "exclude": ["node_modules", "example"],
  "include": ["src"]
}
